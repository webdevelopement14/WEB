<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <!-- onboarding_screen.xml -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="32dp">

        <!-- Heading 1: Tell us about yourself -->
        <TextView
            android:id="@+id/heading1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tell us about yourself"
            android:layout_marginTop="16dp"
            android:textSize="28dp"/>

        <!-- Heading 2: What do you like to eat? -->
        <TextView
            android:id="@+id/heading2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What do you like to eat?"
            android:layout_marginTop="60dp"
            android:textSize="20dp"/>

        <!-- HorizontalScrollView for Options -->
        <HorizontalScrollView
            android:id="@+id/optionsScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/heading2TextView"
            android:layout_marginTop="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/optionsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Add 10 Option Buttons Here -->

                <Button
                    android:id="@+id/option1Button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Pizza"
                    android:layout_marginRight="8dp"/>

                <Button
                    android:id="@+id/option2Button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Burger"
                    android:layout_marginRight="8dp"/>

                <Button
                    android:id="@+id/option3Button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Sushi"
                    android:layout_marginRight="8dp"/>

                <Button
                    android:id="@+id/option4Button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Pasta"
                    android:layout_marginRight="8dp"/>

                <Button
                    android:id="@+id/option5Button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Salad"
                    android:layout_marginRight="8dp"/>

                <Button
                    android:id="@+id/option6Button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Steak"
                    android:layout_marginRight="8dp"/>

                <Button
                    android:id="@+id/option7Button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Ice Cream"
                    android:layout_marginRight="8dp"/>

                <Button
                    android:id="@+id/option8Button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Tacos"
                    android:layout_marginRight="8dp"/>

                <Button
                    android:id="@+id/option9Button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Fries"
                    android:layout_marginRight="8dp"/>

                <Button
                    android:id="@+id/option10Button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="Sushi"
                    android:layout_marginRight="8dp"/>

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/heading3TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add your own"
            android:layout_below="@id/optionsScrollView"
            android:layout_marginTop="50dp"
            android:textSize="20dp"/>

        <!-- Add Button -->
        <Button
            android:id="@+id/addButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:layout_below="@id/heading3TextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <!-- Continue Button -->
        <Button
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:layout_alignParentBottom="true"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:padding="16dp"/>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
